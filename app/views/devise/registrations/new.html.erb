<div class = "inner">
<h2 class = "page-heading">ユーザー新規投稿</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（６文字以上入力）" %>
    <% if @minimum_password_length %>
 
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class='field'>
    <%= f.label :"ユーザー名"%><br />
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :"プロフィール"%><br />
    <%= f.text_area :profile, cols: 60 %>
  </div>

  <div class='field'>
    <%= f.label :"所属"%><br />
    <%= f.text_area :occupation, cols: 60 %>
  </div>

  <div class='field'>
    <%= f.label :"役職"%><br />
    <%= f.text_area :position, cols: 60 %>
  </div>

  <div class="action">
      <%= f.submit "新規投稿"%>
  </div>
<% end %>

<%#= render "devise/shared/links" %>

</div>
